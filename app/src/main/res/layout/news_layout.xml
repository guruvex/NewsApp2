<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_container"
    style="@style/head_liner_layout">

    <TextView
        android:id="@+id/news_date"
        style="@style/news_date_text_view" />

    <LinearLayout style="@style/split_liner_layout">

        <TextView
            android:id="@+id/news_story_catagory"
            style="@style/news_layout_text_view" />

        <TextView
            android:id="@+id/news_story_title"
            style="@style/news_layout_text_view" />

        <TextView
            android:id="@+id/news_author"
            style="@style/news_layout_text_view" />

    </LinearLayout>

</LinearLayout>